

<div class="main-container">
        <div class="container">
            <div class="row">
                <div class="col-sm-3 page-sidebar">
                    <aside>
                        <div class="inner-box">
                            <div class="user-panel-sidebar">
                                <div class="collapse-box">
                                    

                                    <div class="panel-collapse collapse in">
                                        <ul class="acc-list">
                                            <li><%= link_to "View My Profile", "/assistants/#{current_assistant.id}", method: :get %></li>
                                            <li><%= link_to "Edit My Profile", "/assistants/#{current_assistant.id}/edit", method: :get %></li>
                                            

                                        </ul>
                                    </div>
                                </div>
                                
                              
                                <div class="collapse-box">
                                    <h5 class="collapse-title"> Terminate Account <a href=""
                                                                                     data-toggle="collapse"
                                                                                         class="pull-right"></a></h5>
                               
                                <%= link_to "Destroy", "/assistants/#{current_assistant.id}", method: :delete, data: { confirm: "You sure?" } %>       
                                    <div class="panel-collapse collapse in" id="TerminateAccount">
                                        
                                    </div>
                                </div>
                                <!-- /.collapse-box  -->
                            </div>
                        </div>
                        <!-- /.inner-box  -->

                    </aside>
                </div>
                <!--/.page-sidebar-->

                <div class="col-sm-9 page-content">
                    <div class="inner-box">
                        <div class="row">
                            <div class="col-md-5 col-xs-4 col-xxs-12">
                                <button type="button" class="btn" data-toggle="modal" data-target=".bs-example-modal-sm">
                                <%= image_tag (current_assistant.avatar.url(:thumb)) %>
                              </button>
                                
                                <h3 class="no-padding text-center-480 useradmin"><%= current_assistant.name ? current_assistant.name : nil %></h3>
                                
                            </div>
                            <div class="col-md-7 col-xs-8 col-xxs-12">
                                <div class="header-data text-center-xs">

                                    <!-- Traffic data -->
                                    

                                    <!-- revenue data -->
                                    

                                    <!-- revenue data -->
                                    <div class="hdata">
                                        <div class="mcol-left">
                                            <!-- Icon with blue background -->
                                            </div>
                                        <div class="mcol-right">
                                            <!-- Number of visitors -->
                                            
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="inner-box">
                        <div class="welcome-msg">
                            <h3 class="page-sub-header2 clearfix no-padding">Hello <%= current_assistant.name %> </h3>
                        </div>

                        <!--/.row-box End-->
                        <div class="row">
                          <%= form_tag "/assistants/#{current_assistant.id}", method: :patch do %>
                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Name</label>

                                  <div class="col-sm-9">
                                      <input name="name" type="string" class="form-control" value="<%= current_assistant.name %>">
                                  </div>
                              </div>
                              <!-- <div class="form-group">
                                  <label class="col-sm-3 control-label">Company</label>

                                  <div class="col-sm-9">
                                      <input name="company" type="string" class="form-control" value="<%= current_assistant.company %>">
                                  </div>
                              </div> -->

                              <!-- <div class="form-group">
                                  <label class="col-sm-3 control-label">Email</label>

                                  <div class="col-sm-9">
                                      <input name="email" type="string" class="form-control"
                                             value="<%= current_assistant.email %>">
                                  </div>
                              </div> -->

                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Phone Number</label>

                                  <div class="col-sm-9">
                                      <input name="phone_number" type="string" class="form-control" value="<%= current_assistant.phone_number %>">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Address</label>

                                  <div class="col-sm-9">
                                      <input name="address" type="string" class="form-control" value="<%= current_assistant.address %>">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Day Rate</label>

                                  <div class="col-sm-9">
                                      <input name="day_rate" type="integer" class="form-control"
                                             value="<%= current_assistant.day_rate %>">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Worked With</label>

                                  <div class="col-sm-9">
                                      <input name="worked_with" type="text" class="form-control"
                                             value="<%= current_assistant.worked_with %>">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="col-sm-3 control-label">URL</label>

                                  <div class="col-sm-9">
                                      <input name="url" type="string" class="form-control" value="<%= current_assistant.url %>">
                                  </div>
                              </div>

                              <!-- <div class="form-group">
                                  <label class="col-sm-3 control-label">User Photo</label>

                                  <div class="col-sm-9">
                                      <input name="user_photo" type="string" class="form-control" value="User Photo">
                                  </div>
                              </div> -->

                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Bio</label>

                                  <div class="col-sm-9">
                                      <input name="bio" type="text" class="form-control" value="<%= current_assistant.bio %>">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Facebook</label>

                                  <div class="col-sm-9">
                                      <input name="facebook" type="string" class="form-control" value="<%= current_assistant.facebook %>">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Twitter</label>

                                  <div class="col-sm-9">
                                      <input name="twitter" type="string" class="form-control" value="<%= current_assistant.twitter %>">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Instagram</label>

                                  <div class="col-sm-9">
                                      <input name="instagram" type="string" class="form-control" value="<%= current_assistant.instagram %>">
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Blog</label>

                                  <div class="col-sm-9">
                                      <input name="blog" type="string" class="form-control" value="<%= current_assistant.blog %>">
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Years of Experience</label>

                                  <div class="col-sm-9">
                                      <input name="years_exp" type="integer" class="form-control" value="<%= current_assistant.years_exp %>">
                                  </div>
                              </div>

                              <div class="form-group">
                                            <label class="col-md-3 control-label">Occupation</label>

                                            <div class="col-md-8">
                                              <%= select_tag :occupation_id, options_from_collection_for_select(@occupations, :id, :name) %>
                                                <!-- <select name="occupation" type="integer" class="form-control">
                                                    <option value="0" selected="selected"> Select a occupation...</option>
                                                    <option value="1">First Assistant</option>
                                                    <option value="2">Second Assistant</option>
                                                    <option value="3">Third Assistant</option>
                                                    <option value="4">Digital Tech</option>
                                                </select> -->

                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">City</label>

                                            <div class="col-md-8">
                                            <%= select_tag :city_id, options_from_collection_for_select(@cities, :id, :name) %>
                                                <!-- <select name="occupation" type="integer" class="form-control">
                                                    <option value="0" selected="selected"> Select a city...</option>
                                                    <option value="1">New York City</option>
                                                    <option value="2">Los Angeles</option>
                                                    <option value="3">Chicago</option>
                                                </select> -->
                                            </div>
                                        </div>

                              <div class="form-group row">
                                  <label class="col-sm-3 control-label">Car</label>

                                  <div class="col-sm-9">
                                      <input name="car" type="boolean" class="form-control" value="<%= current_assistant.car %>">
                                  </div>
                              </div>


                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Skills</label>
                                  <% @skills.each do |skill| %>
                                    <%= check_box_tag "skill_ids[]", skill.id, checked = CategorizedSkill.exists?(skill_id: skill.id, assistant_id: current_assistant.id) %>
                                    <%= label_tag skill.name %>
                                  <% end %>
                              </div>


                              <div class="form-group">
                                  <label class="col-sm-3 control-label">Genre</label>
                                  <% @categories.each do |category| %>
                                    <%= check_box_tag "category_ids[]", category.id, checked = CategorizedAssistant.exists?(category_id: category.id, assistant_id: current_assistant.id) %>
                                    <%= label_tag category.name %>
                                  <% end %>
                              </div>

                              <div class="form-group">
                                  <div class="col-sm-offset-3 col-sm-9">
                                      <button type="submit" class="btn btn-default">Update</button>
                                  </div>
                              </div>
                              </div>
                              </div>
                              </div>
                              </div>
                              </div>
                              </div>

                            <% end %>
                        </div>
                    </div>
                </div>
                <!--/.page-content-->
            </div>
            <!--/.row-->
        </div>
        <!--/.container-->
    </div>
    <!-- /.main-container -->


      <!--  modal -->



<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body">
      
          <%= form_tag "/assistants/avatarupdate", multipart: true, method: :patch do %>
            <%= file_field_tag :avatar %>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= submit_tag "Change Avatar", class: "btn btn-primary" %>
          <% end %>
      </div>  
    </div>
</div>
</div>


