    <div class="main-container">
        <div class="container">
            <div class="row">
                <div class="col-md-8 page-content">
                    <div class="inner-box category-content">
                        <h2 class="title-2"><i class="icon-user-add"></i> Sign Up </h2>

                        <%= form_for("user", url: registration_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>

                        <div class="row">
                            <div class="col-sm-12">
                                <form class="form-horizontal">
                                    <fieldset>
                                        <div class="form-group required">
                                            <label class="col-md-4 control-label">You are a <sup>*</sup></label>

                                            <div class="col-md-6">
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="role" id="optionsRadios1"
                                                               value="photographer" checked>
                                                        Photographer or Producer </label>
                                                </div>
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="role" id="optionsRadios2"
                                                               value="assistant">
                                                        Assistant or Digital Tech </label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group required">
                                            <label class="col-md-4 control-label">Email <sup>*</sup></label>
                                            <div class="col-md-6"><br />
                                                <%= f.email_field :email, autofocus: true, class: "form-control input-md", placeholder: "Email"  %>
                                                </div>
                                            </div>
                                        

                                        <div class="form-group required">
                                            <label for="inputPassword3" class="col-md-4 control-label">Password<sup>*</sup></label>

                                            <div class="col-md-6"><br />
                                                <% if @minimum_password_length %>
                                                <em>(<%= @minimum_password_length %> characters minimum)</em>
                                                <% end %><br />
                                                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
                                            </div>
                                        </div>

                                        <div class="form-group required">
                                            <label for="inputPassword3" class="col-md-4 control-label">Password Confirmation<sup>*</sup></label>

                                        <div class="col-md-6"><br />
                                                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confirmation" %>
                                            </div>
                                        </div>

                                                <div style="clear:both"></div>
                                                <%= f.submit "Sign up" %></div>
                                        </div>
                                        <% end %>
                                    </fieldset>
                                </form>

                            
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.page-content -->
</div>
